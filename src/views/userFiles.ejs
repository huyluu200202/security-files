<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Files</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/mdbootstrap/css/mdb.min.css" rel="stylesheet">
    <style>
        body {
            padding-bottom: 50px;
        }

        .modal-body img {
            max-width: 100%;
            height: auto;
        }

        .modal-body iframe {
            width: 100%;
            height: 400px;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include('partials/header') %>

        <div class="container my-5">
            <h1 class="mb-4 mt-5 text-center">Danh sách tài liệu</h1>
            <div id="file-table">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Tên tệp</th>
                            <th scope="col">Định dạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (ivFiles && ivFiles.length> 0) { %>
                            <% ivFiles.forEach(file=> { %>
                                <tr>
                                    <td>
                                        <%= file %> <!-- Tên tệp .iv -->
                                            <i class="fas fa-lock" style="color: #28a745;"></i>
                                    </td>
                                    <td>
                                        Encrypted (.iv)
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">Hiện chưa có tệp nào.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="previewModalLabel">Xem trước tệp</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div id="file-preview"></div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>