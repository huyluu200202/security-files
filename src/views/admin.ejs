<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/mdbootstrap/css/mdb.min.css" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include('partials/header') %>
    <div class="container my-5">
        <h1 class="text-center mb-4 mt-4">User Management</h1>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td>
                            <button class="btn btn-primary btn-sm"
                                onclick="openModal('<%= user.id %>', '<%= user.username %>')">
                                Manage Permissions
                            </button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="permissionModal" tabindex="-1" aria-labelledby="permissionModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Manage Permissions</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="permissionForm">
                        <input type="hidden" id="userId" name="userId">
                        <div class="mb-3">
                            <label for="fileId" class="form-label">Select File</label>
                            <select class="form-control" id="fileId" name="fileId">
                                <% files.forEach(file => { %>
                                    <option value="<%= file.id %>"><%= file.fileName %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="can_view" name="can_view">
                            <label class="form-check-label" for="can_view">Can View</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="can_download" name="can_download">
                            <label class="form-check-label" for="can_download">Can Download</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="can_edit" name="can_edit">
                            <label class="form-check-label" for="can_edit">Can Edit</label>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-success">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        function openModal(userId, username) {
            document.getElementById('userId').value = userId;
            const modal = new bootstrap.Modal(document.getElementById('permissionModal'));
            modal.show();
        }

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }

        document.getElementById('permissionForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const userId = document.getElementById('userId').value;
            const fileId = document.getElementById('fileId').value;
            const can_view = document.getElementById('can_view').checked;
            const can_download = document.getElementById('can_download').checked;
            const can_edit = document.getElementById('can_edit').checked;

            const token = getCookie('token'); 

            try {
                const response = await fetch('/api/permissions', {
                    method: 'POST',
                    credentials: 'include',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({
                        userId,
                        fileId,
                        can_view,
                        can_download,
                        can_edit
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    alert(data.message || 'Permissions updated successfully');
                    location.reload(); 
                } else {
                    alert(data.message || 'Error updating permissions');
                }
            } catch (error) {
                alert('Error updating permissions');
                console.error(error);
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
